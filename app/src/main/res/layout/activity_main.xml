<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtvResultado"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238"
        tools:text="0000" />

    <TextView
        android:id="@+id/txtvDispOpera"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        tools:text="0000" />

    <android.support.v7.widget.GridLayout
        android:layout_width="355dp"
        android:layout_height="399dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnC"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="onClick"
            android:shadowColor="@android:color/holo_orange_dark"
            android:text="C"
            android:textSize="30sp"
            app:layout_column="12"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnSiete"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="7"
            android:textSize="30sp"
            app:layout_column="12"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnCuatro"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="4"
            android:textSize="30sp"
            app:layout_column="12"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnUno"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="1"
            android:textSize="30sp"
            app:layout_column="12"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnCeros"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="000"
            android:textSize="30sp"
            app:layout_column="12"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_red_dark"
            android:onClick="onClick"
            android:text="DEL"
            android:textSize="30sp"
            app:layout_column="13"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnOcho"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="8"
            android:textSize="30sp"
            app:layout_column="13"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnCinco"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="5"
            android:textSize="30sp"
            app:layout_column="13"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnDos"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="2"
            android:textSize="30sp"
            app:layout_column="13"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnCero"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="0"
            android:textSize="30sp"
            app:layout_column="13"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnSeis"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="6"
            android:textSize="30sp"
            app:layout_column="14"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnPunto"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClick"
            android:text="."
            android:textSize="30sp"
            app:layout_column="14"
            app:layout_row="4" />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClick"
            android:text="รท"
            android:textSize="30sp"
            app:layout_column="14"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnNueve"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="9"
            android:textSize="30sp"
            app:layout_column="14"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnTres"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_green_light"
            android:onClick="onClick"
            android:text="3"
            android:textSize="30sp"
            app:layout_column="14"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnMas"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClick"
            android:text="+"
            android:textSize="30sp"
            app:layout_column="15"
            app:layout_row="1" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClick"
            android:text="="
            android:textSize="30sp"
            app:layout_column="15"
            app:layout_row="3" />

        <Button
            android:id="@+id/btnMenos"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClick"
            android:text="-"
            android:textSize="30sp"
            app:layout_column="15"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnPor"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="onClick"
            android:text="x"
            android:textSize="30sp"
            app:layout_column="15"
            app:layout_row="0" />

    </android.support.v7.widget.GridLayout>

</android.support.constraint.ConstraintLayout>