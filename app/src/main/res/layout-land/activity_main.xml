<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtvResultado"
        android:layout_width="541dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201"
        tools:text="0000" />

    <TextView
        android:id="@+id/txtvDispOpera"
        android:layout_width="540dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063"
        tools:text="0000" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="673dp"
        android:layout_height="278dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSin1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="sin−1" />

            <Button
                android:id="@+id/btnCos1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Cos-1" />

            <Button
                android:id="@+id/btnTan1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="tan-1" />

            <Button
                android:id="@+id/btnPi"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="π " />

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSin"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="sin " />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="cos" />

            <Button
                android:id="@+id/btnTan"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="tan" />

            <Button
                android:id="@+id/btnExponencial"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="n^y" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRaizCub"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="³√ x" />

            <Button
                android:id="@+id/btnCubo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="n³" />

            <Button
                android:id="@+id/btnLn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Ln" />

            <Button
                android:id="@+id/btnE"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="e" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRaiz"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="√ x" />

            <Button
                android:id="@+id/btnCuadrado"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="n²" />

            <Button
                android:id="@+id/btnFac"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="n!" />

            <Button
                android:id="@+id/brnExp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="Exp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnC"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_red_dark"
                android:text="C" />

            <Button
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_red_dark"
                android:text="DEL" />

            <Button
                android:id="@+id/btnParIzq"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_red_dark"
                android:text="(" />

            <Button
                android:id="@+id/btnParDer"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_red_dark"
                android:text=")" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="500dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnSiete"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="7" />

            <Button
                android:id="@+id/btnCuatro"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="4" />

            <Button
                android:id="@+id/btnUno"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="1" />

            <Button
                android:id="@+id/btnCero"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnOcho"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="8" />

            <Button
                android:id="@+id/btnCinco"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="5" />

            <Button
                android:id="@+id/btnDos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="2" />

            <Button
                android:id="@+id/btnPunto"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="." />

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNueve"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="9" />

            <Button
                android:id="@+id/btnSeis"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="6" />

            <Button
                android:id="@+id/btnTres"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_green_light"
                android:text="3" />

            <Button
                android:id="@+id/btnIgual"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="=" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="÷" />

            <Button
                android:id="@+id/btnPor"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="x" />

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="-" />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@android:color/holo_orange_dark"
                android:text="+" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>